<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <a href="/interviews/form"><button>Create an Interview</button></a>
            </div>
            <div class="col-6">
                <h3>List of all Interviews</h3>
                <ol>
                    <% for(interview of interviews) { %>
                        <li>
                            <a href="/interviews/<%=interview._id%>/students">
                                <%= interview.name %>
                            </a>
                        </li>
                    <% } %>
                </ol>
            </div>
            <div class="col-6">
                <form action="/interviews/allocation" method="post">
                    <div>
                        <label for="interviewDropdown">Choose an Interview: </label>
                        <select name="interview" id="interviewDropdown">
                            <% for(interview of interviews) { %>
                                <option value="<%= interview._id %>"><%= interview.name %></option>
                            <% } %>
                        </select>
                    </div>
                    <div>
                        <label for="studentDropdown">Select a Student: </label>
                        <select name="student" id="studentDropdown">
                            <% for(student of students) { %>
                                <option value="<%= student._id %>"><%= student.name %></option>
                            <% } %>
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                            title="Allocate Student to an Interview">
                            Allocate Interview
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>